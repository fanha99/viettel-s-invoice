<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="vsi_account_invoice_inherit_form_view" model="ir.ui.view">
            <field name="name">account.invoice.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='action_invoice_open'][last()]" position="after">
                     <button name="do_create_draft_invoice"  string="Tạo Hóa Đơn Nháp" type="object" class="oe_highlight"/>
                     <button name="do_create_invoice"  string="Phát Hành Hóa Đơn" type="object" class="oe_highlight" attrs="{'invisible': [('vsi_status','in',('created','canceled'))]}"/>
                </xpath>

                <field name='partner_id' position="after">
                     <field name="vsi_status" readonly="1"/>
                </field>
            </field>
        </record>

    </data>
</odoo>